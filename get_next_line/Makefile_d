SRCS = get_next_line.c get_next_line_utils.c
OBJC = $(SRCS:.c=.o)
HEAD = get_next_line.h
NAME = a.out
FLAG = -Wall -Werror -Wextra

all : $(NAME)

.c.o:
	gcc -g -c -D BUFFER_SIZE=1 $< -o ${<:.c=.o} -I $(HEAD)

$(NAME) : $(OBJC)
	gcc -g -D BUFFER_SIZE=1 $(OBJC)

clean:
			rm -f $(OBJC)

fclean:		clean
			rm -f $(NAME)

re:			fclean all
